div.dashboard(layout="column" flex="flex")
  h3.text-center Current Profile State '{{ vm.user.profile.accountState }}'
  div.text-center
    select(ng-change="vm.setAccountState()" ng-model="vm.accountStateSelect")
      option(value="disabled") Disabled
      option(value="pending") Pending
      option(value="untouchable") Untouchable
  div.pp-tab-header
    div.container

      ul.pp-tabs.nav.nav-tabs
        li(ng-class="vm.setCurrentTab('private.dashboard.open')")
          a(ui-sref="private.dashboard.open") Open invoices
          //- a(ui-sref="private.dashboard.open" ui-sref-opts="{reload:true}") Open invoices
        li(ng-class="vm.setCurrentTab('private.dashboard.activated')")
          a(ui-sref="private.dashboard.activated") Activated invoices
          //- a(ui-sref="private.dashboard.activated" ui-sref-opts="{reload:true}") Activated invoices

  div.pp-tab-content(flex)
    div.container
      div(ui-view="content")

